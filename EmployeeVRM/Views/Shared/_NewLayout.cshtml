<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - EmployeeVRM</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome Icons -->

    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.22/datatables.min.css" />

</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-dark navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>

            <!-- SEARCH FORM -->
            <form class="form-inline ml-3">
                <div class="input-group input-group-sm">
                    <div class="input-group-append">
                    </div>
                </div>
            </form>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" data-widget="control-sidebar" data-slide="true" href="#" role="button">
                        <i class="fas fa-user"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->

        <aside class="main-sidebar sidebar-dark-dark elevation-4">
            <!-- Brand Logo -->
            <a href="@Url.Action("Index", "Home")" class="brand-link">
                <img src="~/Content/UIContent/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">EmployeeVRM</span>
            </a>
            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/Content/UIContent/img/avatar5.png" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">@ViewBag.EmployeeName</a>
                        <a href="#" class="d-block">@ViewBag.EmployeeDeignation , @ViewBag.EmployeeDepartment</a>
                    </div>
                </div>

                <!-- SidebarSearch Form -->
                <div class="form-inline">
                    <div class="input-group" data-widget="sidebar-search">
                        <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                        <div class="input-group-append">
                            <button class="btn btn-sidebar">
                                <i class="fas fa-search fa-fw"></i>
                            </button>
                        </div>
                    </div>
                </div>

                @if (User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("Admin") || User.IsInRole("Employee") || User.IsInRole("Manager") || User.IsInRole("VTM"))
                    {<!-- Sidebar Menu -->
                                            <nav class="mt-2">
                                                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">


                                                    <li class="nav-item">
                                                        <a href="@Url.Action("EmployeeProfile", "Employees")" class="nav-link">
                                                            <i class="nav-icon fas fa-user-edit"></i>
                                                            <p>
                                                                My Profile
                                                            </p>
                                                        </a>
                                                    </li>

                                                    @if (User.IsInRole("Admin"))
                                                    {

                                <li class="nav-item">
                                    <a href="@Url.Action("Index", "Employees")" class="nav-link">
                                        <i class="nav-icon fas fa-user-plus"></i>
                                        <p>
                                            Employees
                                        </p>
                                    </a>
                                </li>}

                                                    @if (User.IsInRole("Manager"))
                                                    {

                                <li class="nav-item">
                                    <a href="@Url.Action("DepartmentEmployeeList", "Employees")" class="nav-link">
                                        <i class="nav-icon fas fa-user-plus"></i>
                                        <p>
                                            Employees
                                        </p>
                                    </a>
                                </li>}
                                                    @if (User.IsInRole("Admin"))
                                                    {

                                <li class="nav-item">
                                    <a href="#" class="nav-link">
                                        <i class="nav-icon fas fa-edit"></i>
                                        <p>
                                            Set Up
                                        </p>
                                    </a>
                                    <ul class="nav nav-treeview">
                                        <li class="nav-item">
                                            <a href="@Url.Action("Index", "Departments")" class="nav-link">
                                                <i class="far fa-car-side nav-icon"></i>
                                                <p>Departments</p>
                                            </a>
                                        </li>


                                        <li class="nav-item">
                                            <a href="@Url.Action("Index", "Designations")" class="nav-link">
                                                <i class="far fa-desktop nav-icon"></i>
                                                <p>Designations</p>
                                            </a>
                                        </li>

                                        <li class="nav-item">
                                            <a href="@Url.Action("Index", "Vehicles")" class="nav-link">
                                                <i class="far fa nav-icon"></i>
                                                <p>Vehicles</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="@Url.Action("Index", "Suppliers")" class="nav-link">
                                                <i class="far fa nav-icon"></i>
                                                <p>Suppliers</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="@Url.Action("Index", "UserRoles")" class="nav-link">
                                                <i class="far fa nav-icon"></i>
                                                <p>Role Manager</p>
                                            </a>
                                        </li>
                                    </ul>
                                </li>}

                                                    <li class="nav-item menu-open">
                                                        <a href="" class="nav-link">
                                                            <i class="nav-icon fas fa-car-alt"></i>
                                                            <p>
                                                                Vehicle Requsitions

                                                            </p>
                                                        </a>


                                                    <li class="nav-item">
                                                        <a href="@Url.Action("Index", "VehicleRequisitions")" class="nav-link">
                                                            <i class="far fa-car-side nav-icon"></i>
                                                            <p>My Requisitions</p>
                                                        </a>
                                                    </li>
                                                    @if (User.IsInRole("Admin"))
                                                    {
                                <li class="nav-item">
                                    <a href="@Url.Action("PendingVerification", "VehicleRequisitions")" class="nav-link">
                                        <i class="far fa-car-side nav-icon"></i>
                                        <p>Pending Verifications</p>
                                    </a>
                                </li>
}

                                                    @if (User.IsInRole("Manager"))
                                                    {
                                <li class="nav-item">
                                    <a href="@Url.Action("PendingVerification", "VehicleRequisitions")" class="nav-link">
                                        <i class="far fa-car-side nav-icon"></i>
                                        <p>Pending Verifications</p>
                                        <span class="right badge badge-danger"> @ViewBag.PendingDepartmentVerificationCount</span>
                                    </a>
                                </li>
                                                        <li class="nav-item">
                                                            <a href="@Url.Action("OnGoingDepartmentRequisitions", "VehicleRequisitions")" class="nav-link">
                                                                <i class="far fa-car-side nav-icon"></i>
                                                                <p>On Going Requisitions</p>
                                                                <span class="right badge badge-info"> @ViewBag.OnGoingDepartmentRequistitionCount</span>
                                                            </a>
                                                        </li>

                                                                                <li class="nav-item">
                                                                                    <a href="@Url.Action("DepartmentCompletedRequisitions", "VehicleRequisitions")" class="nav-link">
                                                                                        <i class="far fa-desktop nav-icon"></i>
                                                                                        <p>Previous Requisitions</p>
                                                                                    </a>
                                                                                </li>}

                                                    @if (User.IsInRole("VMT"))
                                                    {

                                <li class="nav-item">
                                    <a href="@Url.Action("PendingApproval", "VehicleRequisitions")" class="nav-link">
                                        <i class="far fa-car-side nav-icon"></i>
                                        <p>Pending Approvals</p>
                                        <span class="right badge badge-danger">  @ViewBag.PendingApprovalCount</span>
                                    </a>
                                </li>
                                                        <li class="nav-item">
                                                            <a href="@Url.Action("OnGoingAllRequisitions", "VehicleRequisitions")" class="nav-link">
                                                                <i class="far fa-car-side nav-icon"></i>
                                                                <p>On Going Requisitions</p>
                                                                <span class="right badge badge-info">  @ViewBag.OnGoingAllRequistitionsCount</span>
                                                            </a>
                                                        </li>
                                                                                <li class="nav-item">
                                                                                    <a href="@Url.Action("AllCompletedRequisitions", "VehicleRequisitions")" class="nav-link">
                                                                                        <i class="far fa-car-side nav-icon"></i>
                                                                                        <p>Previous Requisitions</p>
                                                                                    </a>
                                                                                </li>


                                                                                                        <li class="nav-item menu-open">
                                                                                                            <a href="" class="nav-link">
                                                                                                                <i class="nav-icon fas fa-magic"></i>
                                                                                                                <p>
                                                                                                                    Maintainance Requisitions

                                                                                                                </p>
                                                                                                            </a>
                                                                                                        </li>

                                                                                                                                <li class="nav-item">
                                                                                                                                    <a href="@Url.Action("Index", "MaintainanceRequisitions")" class="nav-link">
                                                                                                                                        <i class="far fa-car-side nav-icon"></i>
                                                                                                                                        <p>Requisitions</p>
                                                                                                                                    </a>
                                                                                                                                </li>

                                                                                                                                                        <li class="nav-item">
                                                                                                                                                            <a href="@Url.Action("OnGoingAllMaintainance", "MaintainanceRequisitions")" class="nav-link">
                                                                                                                                                                <i class="far fa-car-side nav-icon"></i>
                                                                                                                                                                <p>On Going Maintainance</p>
                                                                                                                                                                <span class="right badge badge-info">  @ViewBag.OnGoingMaintainanceCount</span>
                                                                                                                                                            </a>
                                                                                                                                                        </li>
                                                                                                                                                                                <li class="nav-item">
                                                                                                                                                                                    <a href="@Url.Action("AllCompletedMaintainance", "MaintainanceRequisitions")" class="nav-link">
                                                                                                                                                                                        <i class="far fa-car-side nav-icon"></i>
                                                                                                                                                                                        <p>Previous Maintainance</p>
                                                                                                                                                                                    </a>
                                                                                                                                                                                </li>}

                                                    @if (User.IsInRole("Director"))
                                                    {

                                <li class="nav-item menu-open">
                                    <a href="" class="nav-link">
                                        <i class="nav-icon fas fa-magic"></i>
                                        <p>
                                            Maintainance Requisitions
                                        </p>
                                    </a>
                                </li>
                                                        <li class="nav-item">
                                                            <a href="@Url.Action("MainatinanceRFQPending", "MaintainanceRequisitions")" class="nav-link">
                                                                <i class="far fa-car-side nav-icon"></i>
                                                                <p>Pending Maintainance</p>
                                                                <span class="right badge badge-danger">  @ViewBag.PendingMaintainanceCount</span>

                                                            </a>
                                                        </li>

                                                                                <li class="nav-item">
                                                                                    <a href="@Url.Action("OnGoingAllMaintainance", "MaintainanceRequisitions")" class="nav-link">
                                                                                        <i class="far fa-car-side nav-icon"></i>
                                                                                        <p>On Going Maintainance</p>
                                                                                        <span class="right badge badge-info">  @ViewBag.OnGoingMaintainanceCount</span>
                                                                                    </a>
                                                                                </li>
                                                                                                        <li class="nav-item">
                                                                                                            <a href="@Url.Action("AllCompletedMaintainance", "MaintainanceRequisitions")" class="nav-link">
                                                                                                                <i class="far fa-car-side nav-icon"></i>
                                                                                                                <p>Previous Maintainance</p>
                                                                                                            </a>
                                                                                                        </li>
}


                                                </ul>

                                            </nav> <!-- /.sidebar-menu -->}
                                    }
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">

                        </div><!-- /.col -->
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                            </ol>
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->
            <!-- Main content -->
            <div class="content" style="padding-left: 40px;">


                @RenderBody()



            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
            <div class="p-4">
                @Html.Partial("_LoginPartial")
            </div>
        </aside>
        <!-- /.control-sidebar -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <!-- To the right -->
            <div class="float-right d-none d-sm-inline">
            </div>
            <!-- Default to the left -->
            <strong>Copyright &copy; 2020 EmployeeVRM </strong>
        </footer>
    </div>
    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->

    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.22/datatables.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/adminlte/js")
    @RenderSection("scripts", required: false)
</body>
</html>
